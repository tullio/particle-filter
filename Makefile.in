CC=@CC@
CXX=@CXX@
all:
	cd src && $(MAKE)

install:
	test -d lib || mkdir lib
	cp src/libparticle.* lib/

.PHONY: test sample

sample:
	cd sample && $(MAKE)

test:
	cd test && $(MAKE)

clean:
	cd src && $(MAKE) clean
	cd test && $(MAKE) clean
	rm -fR autom4te.cache *~ *.log *.status
	cd lib && rm -f *.a *.so
